<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.chandlersystem.chandler.ui.profile.ProfileFragment"
        tools:showIn="@layout/fragment_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/spacing_small"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_user_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_smaller"
                    android:layout_marginRight="@dimen/spacing_smaller"
                    android:layout_marginTop="@dimen/spacing_smaller"
                    android:fontFamily="@font/cabin_bold"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="I'am Jon Snow"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_largest" />

                <Button
                    android:id="@+id/btn_point"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/spacing_smallest"
                    android:background="@drawable/item_button_rounded_yellow"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="12.5 points"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_smaller"
                    android:layout_marginRight="@dimen/spacing_smaller"
                    android:layout_marginTop="@dimen/spacing_smaller"
                    android:fontFamily="@font/cabin_regular"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="24 years old, HCM City, Join at Jan 27, 2016, I know nothing - Snow"
                    android:textColor="@color/colorBlack50"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_achievement_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_smaller"
                        android:layout_marginRight="@dimen/spacing_smaller"
                        android:layout_marginTop="@dimen/spacing_smaller"
                        android:fontFamily="@font/cabin_bold"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="2 hot deals"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_smaller"
                        android:layout_marginRight="@dimen/spacing_smaller"
                        android:layout_marginTop="@dimen/spacing_smaller"
                        android:fontFamily="@font/cabin_bold"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="2 hot deals"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_smaller"
                        android:layout_marginRight="@dimen/spacing_smaller"
                        android:layout_marginTop="@dimen/spacing_smaller"
                        android:fontFamily="@font/cabin_bold"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="2 hot deals"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout

            android:id="@+id/review_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/spacing_smaller"
            android:background="@color/colorWhite"
            android:padding="@dimen/spacing_smaller"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>
</layout>

