<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.chandlersystem.chandler.custom_views.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_rounded_radius_black50" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="@dimen/ico_size_normal"
            android:layout_height="@dimen/ico_size_normal"
            android:layout_gravity="right|top"
            android:layout_margin="@dimen/spacing_smaller"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_check"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_margin="@dimen/spacing_smaller"
            android:fontFamily="@font/cabin_regular"
            android:maxLines="2"
            android:textColor="@color/colorWhite"
            tools:text="Hello world" />
    </com.chandlersystem.chandler.custom_views.SquareFrameLayout>
</layout>