<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/layout_many_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/layout_profile_1"
            android:layout_width="@dimen/size_profile_small"
            android:layout_height="@dimen/size_profile_small"
            app:cardCornerRadius="@dimen/size_profile_radius_small">

            <ImageView
                android:id="@+id/iv_profile_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_placeholder_avatar" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_profile_2"
            android:layout_width="@dimen/size_profile_small"
            android:layout_height="@dimen/size_profile_small"
            android:layout_marginLeft="@dimen/_minus4sdp"
            android:layout_marginStart="@dimen/_minus4sdp"
            android:layout_toEndOf="@id/layout_profile_1"
            android:layout_toRightOf="@id/layout_profile_1"
            app:cardCornerRadius="@dimen/size_profile_radius_small">

            <ImageView
                android:id="@+id/iv_profile_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_placeholder_avatar" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_profile_3"
            android:layout_width="@dimen/size_profile_small"
            android:layout_height="@dimen/size_profile_small"
            android:layout_marginLeft="@dimen/_minus4sdp"
            android:layout_marginStart="@dimen/_minus4sdp"
            android:layout_toEndOf="@id/layout_profile_2"
            android:layout_toRightOf="@id/layout_profile_2"
            app:cardCornerRadius="@dimen/size_profile_radius_small">

            <ImageView
                android:id="@+id/iv_profile_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_placeholder_avatar" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_many_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_smallest"
            android:layout_marginStart="@dimen/spacing_smallest"
            android:layout_toEndOf="@id/layout_profile_3"
            android:layout_toRightOf="@id/layout_profile_3"
            android:fontFamily="@font/cabin_regular"
            android:textColor="@color/colorInactive"
            android:textSize="@dimen/text_size_small"
            tools:text="+12 nguoi da dat mua" />

    </RelativeLayout>
</layout>